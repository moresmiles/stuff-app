<div class="section login">
  <div class="container">
    <div class="row">
      <div class="one-half column">

        <h1 class="section-heading"> Welcome <%= current_user.username%>! </h1>

        <div class="row">
          <div class="column">
            <a href="/moves/new"> New Move</a>
          </div>
        </div>
        <br>

        <div class="row">
          <div class="column">
            <a href="/moves"> Previous Moves</a>
          </div>
        </div>
      <br>

        <form action="/owners/<%= current_user.id %>/edit">
          <input class="button" type="submit" value="Edit Account">
        </form>
        <br>
        <form action="/logout">
          <input class="button "type="submit" value="Log Out">
        </form>

      </div>
    </div>
  </div>
</div>
